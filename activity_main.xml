<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset"
    android:textAlignment="gravity">


    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="YOUR_PACKAGE_DIRECTORY.MainActivity">
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="First Name"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Surname"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Address"
            android:id="@+id/textView3"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Post Code"
            android:id="@+id/textView4"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gender"
            android:id="@+id/textView5"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Affiliate"
            android:id="@+id/textView6"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstnameTxt"
            android:layout_above="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_toEndOf="@id/textView"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentTop="true"
            android:textAlignment="gravity"
            android:gravity="bottom"
            android:autoText="false"
            android:foregroundGravity="bottom" />
    
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/surnameTxt"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignRight="@+id/firstnameTxt"
            android:layout_alignEnd="@+id/firstnameTxt"
            android:layout_alignStart="@+id/firstnameTxt"
            android:layout_toEndOf="@id/textView2"
            android:layout_alignLeft="@+id/firstnameTxt"
            android:layout_below="@+id/firstnameTxt"
            android:foregroundGravity="bottom"
            android:gravity="bottom"
            android:textAlignment="gravity" />
    
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addressTxt"
            android:layout_alignRight="@+id/surnameTxt"
            android:layout_alignEnd="@+id/surnameTxt"
            android:layout_alignLeft="@+id/firstnameTxt"
            android:layout_alignStart="@+id/surnameTxt"
            android:layout_toEndOf="@id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_below="@+id/surnameTxt"
            android:foregroundGravity="bottom"
            android:gravity="bottom"
            android:textAlignment="gravity" />
    
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postcodeTxt"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignRight="@+id/addressTxt"
            android:layout_alignEnd="@+id/addressTxt"
            android:layout_alignLeft="@+id/firstnameTxt"
            android:layout_alignStart="@+id/addressTxt"
            android:layout_toEndOf="@id/textView4"
            android:layout_below="@+id/addressTxt" />
    
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genderTxt"
            android:layout_alignRight="@+id/postcodeTxt"
            android:layout_alignEnd="@+id/postcodeTxt"
            android:layout_alignLeft="@+id/firstnameTxt"
            android:layout_alignStart="@+id/postcodeTxt"
            android:layout_toEndOf="@id/textView5"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:layout_alignBottom="@+id/textView5"
            android:layout_below="@+id/postcodeTxt" />
    
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/affiliateTxt"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/firstnameTxt"
            android:layout_alignStart="@+id/genderTxt"
            android:layout_toEndOf="@id/textView6"
            android:layout_below="@+id/genderTxt" />
    
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            android:id="@+id/nextButton"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/affiliateTxt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/affiliateTxt"
            android:layout_alignStart="@+id/affiliateTxt"
            android:clickable="true" />
    
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:id="@+id/cancelButton"
            android:layout_alignBottom="@+id/nextButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:clickable="true" />
    
    </RelativeLayout>
</ScrollView>
